<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/video_capture_layout_title_bar_width"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00b7ee" >

        <TextView
            android:id="@+id/tv_video_capture_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/float_video_capture_back"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/float_video_capture_title"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroudn_color_ddffffff"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_float_video_capture_begin_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/float_video_capture_begin_capture" />

            <TextView
                android:id="@+id/tv_float_video_start_or_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/flaot_video_capture_begin_capture"
                android:textColor="@color/text_color_545454"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_float_video_capture_close_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/float_video_capture_close_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/float_video_capture_close_camare"
                android:textColor="@color/text_color_545454"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_float_video_capture_video_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/float_video_capture_video_manager" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/float_video_capture_video_manager"
                android:textColor="@color/text_color_545454"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@id/tv_float_video_capture_video_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/float_video_capture_video_manager"
            android:gravity="center"
            android:minWidth="@dimen/text_min_width"
            android:text="@string/float_video_capture_video_manager"
            android:textColor="@color/text_color_545454"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_main_window_close_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/main_window_close_bubble"
            android:gravity="center"
            android:minWidth="@dimen/text_min_width"
            android:text="@string/main_window_close_bubble"
            android:textColor="@color/text_color_545454"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_main_window_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/main_window_go_back"
            android:gravity="center"
            android:minWidth="@dimen/text_min_width"
            android:text="@string/main_window_go_back"
            android:textColor="@color/text_color_545454"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>