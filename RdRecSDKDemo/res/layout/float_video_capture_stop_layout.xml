<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/video_capture_layout_title_bar_width"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/video_capture_layout_title_bar_width"
        android:layout_height="40dp"
        android:background="#00b7ee" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/float_video_capture_title"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="@dimen/video_capture_layout_title_bar_width"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/float_video_capture_stop_text" />

    <View
        android:layout_width="@dimen/video_capture_layout_title_bar_width"
        android:layout_height="0.5dp"
        android:background="#888888" />

    <LinearLayout
        android:layout_width="@dimen/video_capture_layout_title_bar_width"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_stop_capture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/float_video_capture_stop_button_text"
            android:textColor="#545454" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#888888" />

        <TextView
            android:id="@+id/tv_pause_capture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/float_video_capture_pause_button_text"
            android:textColor="#545454" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#888888" />

        <TextView
            android:id="@+id/tv_cancel_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/float_video_capture_cancel_button_text"
            android:textColor="#545454" />
    </LinearLayout>

</LinearLayout>